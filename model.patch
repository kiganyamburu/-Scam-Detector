+    
+    all_passed = all(result for _, result in results)
+    if all_passed:
+        print("\nğŸ‰ ALL DETAILED TESTS PASSED!")
+    else:
+        print("\nâš ï¸  Some detailed tests failed")
+    
+    return all_passed
+
+if __name__ == "__main__":
+    run_detailed_tests()
